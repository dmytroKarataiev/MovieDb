<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tab_item_image"
        android:layout_width="@dimen/tab_image_size"
        android:layout_height="@dimen/tab_image_size"
        android:contentDescription="@string/tab_description"
        android:paddingTop="@dimen/tab_layout_padding" />

    <TextView
        android:id="@+id/tab_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/tab_layout_padding"
        android:textAppearance="?android:textAppearance" />
</LinearLayout>
