<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: Movie Title -->
        <TextView
            android:id="@+id/movie_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLighter"
            android:padding="@dimen/fab_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/movie_name" />


        <!-- Main content: rating, votes, year -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/fab_margin">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/poster_width"
                android:layout_height="@dimen/poster_height" >

                <ImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="@dimen/poster_width"
                    android:layout_height="@dimen/poster_height"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/movie_poster"/>

                <TextView
                    android:id="@+id/movie_poster_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/movie_item_spinner"
                    android:layout_width="@dimen/poster_width"
                    android:layout_height="@dimen/poster_height"
                    android:progressDrawable="@drawable/circular_progress_bar"/>

                <ImageView
                    android:id="@+id/movie_poster_favorite"
                    android:layout_width="@dimen/favorite_width"
                    android:layout_height="@dimen/favorite_height"
                    android:src="@drawable/bookmark"
                    android:layout_gravity="left|top"/>

            </FrameLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/fab_margin">

                <TextView
                    android:id="@+id/detail_releasedate_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/year_text" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/star_width"
                        android:layout_height="@dimen/star_height"
                        android:layout_marginEnd="@dimen/star_margin"
                        android:layout_marginRight="@dimen/star_margin"
                        android:src="@drawable/star"
                        android:contentDescription="@string/star_votes"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/detail_rating_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/rating_text" />

                        <TextView
                            android:id="@+id/detail_votecount_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/votes" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Movie Description -->
        <TextView
            android:id="@+id/detail_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin" />

        <!-- YouTube Frame -->
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
            android:id="@+id/youtube_fragment"
            android:padding="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <!-- Reviews TextView -->
        <TextView
            android:id="@+id/detail_reviews_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin" />

    </LinearLayout>


</ScrollView>
